<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.6/phpunit.xsd"
         bootstrap="application/tests/integration_bootstrap.php"
         colors="true"
         stopOnFailure="false"
         failOnWarning="false"
         failOnRisky="false"
         testdox="true">

    <testsuites>
        <testsuite name="Authorization Integration Tests">
            <file>application/tests/integration/AuthorizationIntegrationTest.php</file>
        </testsuite>
    </testsuites>

    <php>
        <const name="PHPUNIT_RUNNING" value="1"/>
    </php>

    <logging>
        <testdoxHtml outputFile="build/testdox/authorization_integration.html"/>
    </logging>
</phpunit>
