<?xml version="1.0" encoding="UTF-8" ?>
<phpunit bootstrap="application/tests/enhanced_bootstrap.php"
         colors="true"
         verbose="true">
    <testsuites>
		<testsuite name="EnhancedTests">
			<file>application/tests/unit/helpers/AssetsHelperTest.php</file>
			<file>application/tests/unit/helpers/FormElementsHelperTest.php</file>
			<file>application/tests/unit/helpers/CsvHelperTest.php</file>
			<file>application/tests/unit/libraries/WidgetLibraryTest.php</file>
			<file>application/tests/unit/libraries/ButtonLibraryTest.php</file>
			<file>application/tests/unit/libraries/LogLibraryTest.php</file>
		</testsuite>
	</testsuites>
	<logging>
		<log type="junit" target="build/logs/junit_enhanced.xml"/>
		<log type="testdox-text" target="build/logs/testdox_enhanced.txt"/>
	</logging>
	<php>
		<const name="PHPUNIT_TEST" value="1" />
		<const name="PHPUNIT_CHARSET" value="UTF-8" />
		<server name="REMOTE_ADDR" value="0.0.0.0" />
	</php>
	<filter>
		<whitelist>
			<directory suffix=".php">application</directory>
			<exclude>
				<directory suffix=".php">system</directory>
			</exclude>
		</whitelist>
	</filter>
</phpunit>
